@model Post

<!DOCTYPE html>

<html>
<head>
    <title>Post Ekle</title>
</head>
<body>
<div>
    <div class="container">
        <h1>Yeni Post Ekle</h1>
        @if (ViewBag.CaptchaError != null)
        {
            <div class="alert alert-danger" role="alert">
                reCaptcha doğrulanamadı!
            </div>
        }
        <form class="post-form" method="post">
            <div class="form-group">
                <label for="Title">Başlık:</label>
                <input type="text" id="Title" name="Title" value="@Model.Title" required>
            </div>
            <div class="form-group">
                <label for="Body">İçerik:</label>
                <input type="text" id="Body" name="Body" value="@Model.Body" required />
            </div>
            <input type="hidden" name="UserId" value="5"/>
            <div class="g-recaptcha" data-sitekey=""></div>
            <br/>
            <input type="submit" value="Post Ekle">
        </form>
    </div>
</div>
</body>
</html>

@section Scripts{
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit"
            async defer>
    </script>
}